+			if (conf->rdk_greylist) {
+				wpa_printf(MSG_DEBUG,
+						"GREYLIST: %s: add %s to %s\n",
+						__func__,
+						txtaddr,
+						conf->iface);
+				snprintf(cmd, sizeof(cmd), "wl -i %s mac %s",
+						conf->iface, txtaddr);
+				system(cmd);
+			}
+		}
+	}
+}
